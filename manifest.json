{
  "name": "Independent",
  "version": "1.1.1",
  "description": "Changes Jira to use more clear terminology instead of 'is dependent upon' and 'depends on' when referring to issues' dependencies. Also does other cool Jira stuff now.",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://jira.drivedominion.com/*"],
      "js": ["jquery-3.3.1.js", "jira_depends.js"],
      "css": ["jira_depends.css"]
    }
  ],
  "web_accessible_resources": [
    "images/jira_idea_question_mark_better.jpg"
  ],
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": false,
    "chrome_style": true
  }
}
